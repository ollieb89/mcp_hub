{
  "name": "mcp-hub",
  "version": "4.2.1",
  "description": "A manager server for MCP servers that handles process management and tool routing",
  "author": "Ollie",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ollieb89/mcp_hub.git"
  },
  "keywords": [
    "mcp",
    "mcp-hub",
    "model-context-protocol",
    "mcp-servers-manager",
    "server",
    "process-management",
    "mcp-tool-routing"
  ],
  "files": [
    "dist/cli.js",
    "LICENSE.md",
    "README.md"
  ],
  "type": "module",
  "main": "./dist/cli.js",
  "bin": {
    "mcp-hub": "dist/cli.js"
  },
  "scripts": {
    "start": "bun ./src/utils/cli.js --port 7000 --config ./mcp-servers.json",
    "clean": "rm -rf dist",
    "prebuild": "bun run clean",
    "build": "bun scripts/build.js",
    "postbuild": "chmod +x dist/cli.js",
    "test": "bun run vitest run",
    "test:watch": "bun run vitest watch",
    "test:coverage": "bun run vitest run --coverage",
    "test:coverage:ui": "bun run vitest run --coverage --coverage.reporter=html",
    "test:seq": "bun run vitest run --no-file-parallelism --poolOptions.threads.singleThread=true --maxConcurrency=1",
    "test:quality": "bun run vitest run --no-file-parallelism --poolOptions.threads.singleThread=true --coverage --maxConcurrency=1",
    "test:fast": "bun run vitest run --no-file-parallelism=false --poolOptions.threads.singleThread=false --pool=threads --poolOptions.threads.maxThreads=4",
    "test:load": "k6 run tests/load/basic-mcp-endpoint.js",
    "test:load:stress": "k6 run tests/load/stress-test.js",
    "test:load:spike": "k6 run tests/load/spike-test-llm.js",
    "test:load:ci": "k6 run --out json=test-results-load.json tests/load/basic-mcp-endpoint.js",
    "update-data": "bun scripts/update-data.js",
    "release:patch": "bash scripts/release.sh patch",
    "release:minor": "bash scripts/release.sh minor",
    "release:major": "bash scripts/release.sh major",
    "prepublishOnly": "bun run build",
    "dev:ui": "vite dev",
    "build:ui": "vite build",
    "preview:ui": "vite preview"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.9.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.6",
    "chokidar": "^4.0.3",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.0",
    "express": "^5.1.0",
    "fast-deep-equal": "^3.1.3",
    "globals": "^16.5.0",
    "jsdom": "^27.1.0",
    "mock-fs": "^5.5.0",
    "nock": "^14.0.10",
    "nodemon": "^3.1.10",
    "open": "^10.2.0",
    "reconnecting-eventsource": "^1.6.4",
    "supertest": "^7.1.4",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "vite": "^7.1.12",
    "vitest": "^4.0.6",
    "yargs": "^18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@google/generative-ai": "^0.24.1",
    "@monaco-editor/react": "^4.7.0",
    "@mui/icons-material": "^7.3.4",
    "@mui/material": "^7.3.4",
    "@mui/x-charts": "^8.16.0",
    "json5": "^2.2.3",
    "monaco-editor": "^0.54.0",
    "openai": "^6.7.0",
    "p-queue": "^9.0.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "pino-roll": "^4.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.5",
    "recharts": "^3.3.0",
    "undici": "^7.16.0"
  }
}

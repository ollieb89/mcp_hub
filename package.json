{
  "name": "mcp-hub",
  "version": "4.2.1",
  "description": "A manager server for MCP servers that handles process management and tool routing",
  "author": "Ollie",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ravitemer/mcp-hub.git"
  },
  "keywords": [
    "mcp",
    "mcp-hub",
    "model-context-protocol",
    "mcp-servers-manager",
    "server",
    "process-management",
    "mcp-tool-routing"
  ],
  "files": [
    "dist/cli.js",
    "LICENSE.md",
    "README.md"
  ],
  "type": "module",
  "main": "./dist/cli.js",
  "bin": {
    "mcp-hub": "dist/cli.js"
  },
  "scripts": {
    "start": "node ./src/utils/cli.js --port 7000 --config ./mcp-servers.json",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "node scripts/build.js",
    "postbuild": "chmod +x dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest run --coverage --coverage.reporter=html",
    "test:seq": "vitest run --no-file-parallelism --poolOptions.threads.singleThread=true --maxConcurrency=1",
    "test:quality": "vitest run --no-file-parallelism --poolOptions.threads.singleThread=true --coverage --maxConcurrency=1",
    "test:fast": "vitest run --no-file-parallelism=false --poolOptions.threads.singleThread=false --pool=threads --poolOptions.threads.maxThreads=4",
    "update-data": "node scripts/update-data.js",
    "release:patch": "bash scripts/release.sh patch",
    "release:minor": "bash scripts/release.sh minor",
    "release:major": "bash scripts/release.sh major",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@vitest/coverage-v8": "^3.2.4",
    "chokidar": "^4.0.3",
    "esbuild": "^0.25.11",
    "eslint": "^9.38.0",
    "express": "^4.21.2",
    "fast-deep-equal": "^3.1.3",
    "globals": "^16.4.0",
    "mock-fs": "^5.5.0",
    "nock": "^14.0.10",
    "nodemon": "^3.1.10",
    "open": "^10.2.0",
    "reconnecting-eventsource": "^1.6.4",
    "supertest": "^7.1.4",
    "uuid": "^11.1.0",
    "vitest": "^3.2.4",
    "yargs": "^18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "json5": "^2.2.3",
    "openai": "^6.7.0",
    "p-queue": "^8.1.1",
    "undici": "^7.16.0"
  }
}
